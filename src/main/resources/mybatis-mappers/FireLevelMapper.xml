<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sxbang.friday.dao.FireLevelDao">

	<sql id="where">
		<where>
			<if test="params != null">
							<if test="params.levelId != null and params.levelId != ''">
				and level_id = #{params.levelId} 
			</if>
			<if test="params.level != null and params.level != ''">
				and level = #{params.level} 
			</if>
			<if test="params.money != null and params.money != ''">
				and money = #{params.money} 
			</if>

			</if>
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from fire_level t
		<include refid="where" />
	</select>

	<select id="list" resultType="FireLevel">
		select * from fire_level t
		<include refid="where" />
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update fire_level t
		<set>
			<if test="levelId != null">
				level_id = #{levelId}, 
			</if>
			<if test="level != null">
				level = #{level}, 
			</if>
			<if test="money != null">
				money = #{money}, 
			</if>

		</set>
		where t.level_id = #{id}
	</update>

</mapper>
