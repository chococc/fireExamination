<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sxbang.friday.dao.identityCardDao">

    <sql id="where">
    <where>
        <if test="params != null">
            <if test="params.studentName != null and params.studentName != ''">
                and studentName = #{params.studentName}
            </if>
            <if test="params.testNo != null and params.testNo != ''">
                and testNo = #{params.testNo}
            </if>
            <if test="params.testName != null and params.testName != ''">
                and testName = #{params.testName}
            </if>
            <if test="params.testPlace != null and params.testPlace != ''">
                and testPlace = #{params.testPlace}
            </if>
            <if test="params.testPlaceID != null and params.testPlaceID != ''">
                and testPlaceID = #{params.testPlaceID}
            </if>
            <if test="params.testPlaceNo != null and params.testPlaceNo != ''">
                and testPlaceNo = #{params.testPlaceNo}
            </if>

        </if>
    </where>
    </sql>

    <select id="list" resultType="testidentity">
        select * from test_identity t
        <include refid="where" />
        limit #{offset}, #{limit}
    </select>

    <select id="count" resultType="int">
        select count(1) from test_identity t
        <include refid="where" />
    </select>
</mapper>