<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sxbang.friday.dao.FireExamineRoomDao">

	<sql id="where">
		<where>
			<if test="params != null">
							<if test="params.examineRoomId != null and params.examineRoomId != ''">
				and examine_room_id = #{params.examineRoomId} 
			</if>
			<if test="params.examineRoomName != null and params.examineRoomName != ''">
				and examine_room_name = #{params.examineRoomName} 
			</if>
			<if test="params.detailAddress != null and params.detailAddress != ''">
				and detail_address = #{params.detailAddress} 
			</if>

			</if>
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from fire_examine_room t
		<include refid="where" />
	</select>

	<select id="list" resultType="FireExamineRoom">
		select * from fire_examine_room t
		<include refid="where" />
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update fire_examine_room t
		<set>
			<if test="examineRoomId != null">
				examine_room_id = #{examineRoomId}, 
			</if>
			<if test="examineRoomName != null">
				examine_room_name = #{examineRoomName}, 
			</if>
			<if test="detailAddress != null">
				detail_address = #{detailAddress}, 
			</if>
		    <if test="storage!=null">
				storage=#{storage},
			</if>

		</set>
		where t.examine_room_id = #{examineRoomId}
	</update>

</mapper>
