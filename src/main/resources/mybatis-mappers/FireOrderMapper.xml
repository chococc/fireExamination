<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sxbang.friday.dao.FireOrderDao">

	<sql id="where">
		<where>
			<if test="params != null">
							<if test="params.order_id != null and params.order_id != ''">
				and order_id = #{params.orderId} 
			</if>
			<if test="params.examineId != null and params.examineId != ''">
				and examine_id = #{params.examineId} 
			</if>
			<if test="params.examineName != null and params.examineName != ''">
				and examine_name = #{params.examineName} 
			</if>
			<if test="params.levelId != null and params.levelId != ''">
				and level_id = #{params.levelId} 
			</if>
			<if test="params.examId != null and params.examId != ''">
				and exam_id = #{params.examId} 
			</if>
			<if test="params.createTime != null and params.createTime != ''">
				and create_time = #{params.createTime} 
			</if>
			<if test="params.money != null and params.money != ''">
				and money = #{params.money} 
			</if>
			<if test="params.status != null and params.status != ''">
				and status = #{params.status} 
			</if>

			</if>
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from fire_order t
		<include refid="where" />
	</select>

	<select id="list" resultType="FireOrder">
		select * from fire_order t
		<include refid="where" />
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update fire_order t
		<set>
			<if test="orderId != null">
				order_id = #{orderId}, 
			</if>
			<if test="examineId != null">
				examine_id = #{examineId}, 
			</if>
			<if test="examineName != null">
				examine_name = #{examineName}, 
			</if>
			<if test="levelId != null">
				level_id = #{levelId}, 
			</if>
			<if test="examId != null">
				exam_id = #{examId}, 
			</if>
			<if test="createTime != null">
				create_time = #{createTime}, 
			</if>
			<if test="money != null">
				money = #{money}, 
			</if>
			<if test="status != null">
				status = #{status}, 
			</if>

		</set>
		where t.order_id = #{orderId}
	</update>

</mapper>
